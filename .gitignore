
# Directorios de dependencias
/frontend/node_modules/
/backend/node_modules/

# Artefactos de build y caché del Frontend (Angular)
/frontend/dist/
/frontend/.angular/
/frontend/coverage/ # Si ejecutas tests con reportes de cobertura
/frontend/npm-debug.log
/frontend/yarn-error.log

# Artefactos de build y logs del Backend (Node.js)
/backend/dist/          # Si tu backend compila a un directorio 'dist'
/backend/build/         # Si tu backend compila a un directorio 'build'
/backend/logs/          # Directorio para logs del backend
/backend/npm-debug.log*
/backend/yarn-debug.log*
/backend/yarn-error.log*
/backend/lerna-debug.log*

# Entornos virtuales (Si tu backend usa Python, por ejemplo)
/backend/venv/
/backend/__pycache__/
*.pyc

# IDEs y editores (para la raíz y/o subdirectorios, pero el slash inicial los hace relativos a la raíz)
/.idea/
.project
.classpath
.c9/
*.launch
.settings/
*.sublime-workspace
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json
.history/*

# Archivos de variables de entorno (Importante para desarrollo local)
.env
.env.development.local
.env.test.local
.env.production.local
.env.local

# Archivos temporales y de caché
/tmp/
/out-tsc/
/bazel-out/ # Si usas Bazel con Angular
.sass-cache/
/connect.lock
.temp/
.tmp/
pids/
*.pid
*.seed
*.pid.lock

# Reportes de diagnóstico de Node.js
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json

# Archivos del sistema operativo
.DS_Store
Thumbs.db

# Bases de datos y archivos generados específicos (ej. Prisma)
/generated/prisma/ # Directorio generado por Prisma, si lo usas
*.sqlite3 # Para bases de datos SQLite locales